import java.util.Scanner;
public class Tryout {
	public static void main(String[]args){
		System.out.println("What's your name?\r\n");
		Scanner scan = new Scanner(System.in);
		String name = scan.nextLine();
	    System.out.println("Hi, " + name + "!\r\n");			
	    
	    boolean stop = false;
	    while (!stop) {
		    System.out.println("How old are you?");
		    double age = 394876;
		    try {
		      age = scan.nextDouble();
		    }
		    catch(Exception e) {
		    	System.out.println("That is not true./r/n");
		    //5,467,500,000	square feet total in a whole lot of bases by 1 machine made by magicalmiraclemachines.gov to establish defense.	
		    	return;
		    }
	    	if(age > 0 && age < 122) 
	    	{
	    		System.out.println("Okay.\r\n");
	    		stop = true;
	    	} else {
	    		System.out.println("That is not true.");
	    	}
	    }
	}
}

	    
	      

